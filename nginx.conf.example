# Nginx configuration for OMJ Validator
# Copy to /etc/nginx/sites-available/omj and symlink to sites-enabled
#
# Install certbot for SSL:
#   sudo apt install certbot python3-certbot-nginx
#   sudo certbot --nginx -d omj-validator.duckdns.org

upstream frontend {
    server 127.0.0.1:3100;
}

upstream api {
    server 127.0.0.1:8100;
}

server {
    listen 80;
    server_name omj-validator.duckdns.org;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name omj-validator.duckdns.org;

    # SSL certificates (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/omj-validator.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/omj-validator.duckdns.org/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: blob:; font-src 'self' https://cdn.jsdelivr.net; connect-src 'self' wss:; frame-ancestors 'self';" always;

    # File upload size limit (match backend config)
    client_max_body_size 50M;

    # Frontend (Next.js handles most routes)
    location / {
        proxy_pass http://frontend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # WebSocket support for hot reloading (dev) and streaming
    location /_next/webpack-hmr {
        proxy_pass http://frontend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # WebSocket proxy for real-time submission progress
    location /ws/ {
        proxy_pass http://api;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400;
    }

    # Direct API access (optional, for debugging)
    # Frontend already proxies /api/* to backend internally
    # Uncomment if you need direct API access from outside
    #
    # location /api/ {
    #     proxy_pass http://api;
    #     proxy_http_version 1.1;
    #     proxy_set_header Host $host;
    #     proxy_set_header X-Real-IP $remote_addr;
    #     proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #     proxy_set_header X-Forwarded-Proto $scheme;
    # }
}
