# Development Dockerfile for FastAPI with hot-reload
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code (will be overwritten by volume mounts in dev)
COPY app/ ./app/
COPY alembic/ ./alembic/
COPY alembic.ini .
COPY prompts/ ./prompts/
COPY tasks/ ./tasks/
COPY data/tasks/ ./data/tasks/
COPY data/skills.json ./data/skills.json
COPY static/ ./static/
COPY templates/ ./templates/

# Create data directories
RUN mkdir -p /app/data/uploads

# Expose development port
EXPOSE 8000

# Run migrations and start uvicorn with hot-reload
CMD ["sh", "-c", "alembic upgrade head && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000"]
