# Authentication
AUTH_KEY=your-secret-key-here

# AI Provider Selection (claude or gemini)
AI_PROVIDER=claude

# Claude CLI Configuration (only needed if AI_PROVIDER=claude)
CLAUDE_PATH=claude
CLAUDE_MODEL=opus
CLAUDE_TIMEOUT=300

# Gemini API Configuration (only needed if AI_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_TIMEOUT=90

# App Configuration
UPLOAD_MAX_SIZE_MB=10

# Data Directory (optional, for cloud deployments)
# DATA_DIR=/data
